	function getDateTime()
	{
		var dateTime = new Date();
		document.getElementById('time').value = dateTime.toString();
	}

	function switchTest()
	{
		var name = document.getElementById('switch').value;
		switch(name)
		{
			case "James":
				document.getElementById('switch-output').innerHTML = name + ' is an software programmer';
				break;
			case "Lloyd":
				document.getElementById('switch-output').innerHTML = name + ' is an Engineer';
				break;
			default :
				document.getElementById('switch-output').innerHTML = 'Nothing has been met here';
		}
	}
	function forLoop(){
		var myText = '';
		for(i=1; i<=10; i++)
		{
			myText +=  i + ' I love James Gudhlanga \n';
		}
		document.getElementById('for-output').innerText = myText;
	}
	function whileLoop(){
		var myText = '';
		i=1;
		while(i<=10)
		{
			myText +=  i + " I love James Gudhlanga Again \n ";
			i++;
		}
		document.getElementById('while-output').innerText = myText;
	}
	function doWhileLoop(){
		var myText = '';
		var i=1;
		do
		{
			myText +=  i + " I Do love James Gudhlanga \n ";
			i++;
		}
		while(i<=20);
		document.getElementById('do-output').innerText = myText;
	}
	function showObject(){
