	function printTime()
	{
		var now = new Date();
		var hours  = now.getHours();
		var minutes  = now.getMinutes();
		var seconds  = now.getSeconds();
		document.getElementById('time-output').innerHTML = hours+":"+minutes+":"+seconds ;
	}

