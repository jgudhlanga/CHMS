	function showArray(){
		var males = new Array('James Gudhlanga', "Andrew Gudhlanga", "Lloyd Gudhlanga", "Lymon Gudhlanga");
		var females = new  Array("Francisca Gudhlanga", "Evelyn Mudzedze");
		var people = males.concat(females);
		var myPeople = '';
		people.sort();
		for(i=0; i< people.length; i++)
		{
			myPeople += people[i] + '\n';
		}
		myPeople +=  " <b>Array Join</b> \n";
		myPeople += people.join();
		document.getElementById('array-output').innerText = myPeople;
	}
	function showPrompt(){
		var name = prompt('Enter your name', '');
		document.getElementById('prompt-output').innerText = "Hallo  " + name;
	}
	function captureByPrompt(){
		var details = new Array(4);
		for(i=0; i<5; i++)
